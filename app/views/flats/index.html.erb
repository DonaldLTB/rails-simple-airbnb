<div class="header">
  <h4>Simple Airbnb</h4>
  <!-- add add flat to it -->
  <%= link_to 'Add Flat', new_flat_path, class: "btn btn-outline-primary" %>
</div>
<h1 class="all_flats">All our Flats (<%= Flat.count %>)</h1>
<div class="container">
  <div class="cards">
  <% @flats.each do |flat| %>
    <div class="card">
      <img src="https://source.unsplash.com/collection/15233925/800x450" alt="">
      <h5><%= flat.name %></h5>
        <td><%= flat.address %></td>
        <div class="icons"><td><i class="fas fa-user-friends"></i><%= flat.number_of_guests %> <i class="fas fa-euro-sign"></i><%= flat.price_per_night %></td></div>
        <div class="more">
          <td><%= link_to 'More Info', flat_path(flat.id) %></td>
          <td style="color: #FDC741;"><%= link_to 'Edit', edit_flat_path(flat) %></td>
          <td><%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
    </div>
  <% end %>
  </div>
</div>
